template(name='map2')
    .ui.padded.grid
        .sixteen.wide.column
            .ui.inline.header map
            .ui.big.disabled.button.init 
                i.checkmark.icon
                |init
            i.minus.circular.link.icon.zoomout(title='zoom out')
            .ui.labeled.input
                .label zoom
                input.zoom_level(type='number' value=current_zoom_level min='0' max='25')
            i.plus.circular.link.icon.zoomin(title='zoom in')
                
            .ui.button.draw  
                i.pencil.icon
                |draw map
            .ui.button.click_markers  
                i.marker.icon
                |clickable markers
            .ui.button.add_marker  
                i.plus.icon
                |add marker
            .ui.button.find_me  
                i.marker.icon
                |find me
            .ui.button.add_legend
                |legend
            .ui.button.add_circle
                i.circle.icon
                |circle
            .ui.button.toggle_moving
                if can_move
                    i.chevron.right.icon
                    |movable
                else
                    i.lock.icon
                    |locked
            .ui.input
                input.add_place(type='text' placeholder='add geocoded place')
            each current_markers
                .ui.label 
                    i.remove.icon
                    |#{this}
            #map
            #mapgl
            .ui.header rentals
            .ui.four.cards.list
                each rental_docs
                    .card
                        img.ui.image(src="{{c.url image_id width=400 height=400}}")
                        .content
                            a.header.pick_rental.zoomer #{title},
                            .description
                                .ui.label #{location}
                                each locaation_tags
                                    .ui.label #{this}
                                a.ui.compact.button(href="/post/#{_id}")
                                    |view