template(name='map2')
    .ui.padded.grid
        .sixteen.wide.column
            .ui.inline.header map
            .ui.big.disabled.button.init 
                i.checkmark.icon
                |init
            i.minus.circular.link.icon.zoomout(title='zoom out')
            .ui.labeled.input
                .label zoom
                input.zoom_level(type='number' value=current_zoom_level)
            i.plus.circular.link.icon.zoomin(title='zoom in')
                
            .ui.button.draw  
                i.pencil.icon
                |draw map
            .ui.button.find_me  
                i.marker.icon
                |find me
            .ui.button.add_legend
                |legend
            .ui.button.add_circle
                i.circle.icon
                |circle
            .ui.button.toggle_moving
                if can_move
                    i.chevron.right.icon
                    |movable
                else
                    i.lock.icon
                    |locked
            .ui.input
                input.add_place(type='text' placeholder='add geocoded place')
            each current_markers
                .ui.label 
                    i.remove.icon
                    |#{this}
            #map