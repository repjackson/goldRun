template(name='user_orders')
    .scrolling
        .ui.segments
            each orders 
                +profile_order_item

template(name='profile_order_item')
    .ui.segment.grid
        .row
            .four.wide.column
                with order_meal
                    //- img.ui.mini.image(src=image)
                    +image_view key='image_id' direct=true classes='zoom ui tiny image'
            .twelve.wide.column
                .ui.header #{order_meal.title}
                a.ui.small.header.inline.lowercase(href="/order/#{_id}/view")
                    |#{order_amount}c
                .ui.small.inline.header #{when} by #{_author_username}
                a.ui.basic.button(href="/order/#{_id}/view")
                    |view
                    i.right.chevron.icon
                if is_admin
                    +remove_button
