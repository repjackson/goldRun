template(name='products')
    .ui.stackable.padded.grid
        .four.wide.column
            .ui.inline.header 
                +i name='shop'
                |#{product_docs.count}
                |products
            if currentUser
                a.ui.icon.compact.circular.button.add_product(title='add product')
                    i.plus.large.icon
            // .div
            .ui.left.icon.search.small.input
                i.search.icon.refresh_tags
                input#search_tag.prompt(type='text' autocomplete="off" placeholder='tags')
            if selected_tag_plural
                .ui.icon.circular.black.compact.button.clear_picked_tags
                    i.remove.icon
            each picked_tags
                button.ui.blue.compact.circular.small.button.unselect_tag(tabindex='0')
                    //- i.remove.icon
                    | #{this}
            each tags
                button.ui.circular.compact.small.button.tag_result(tabindex="0" class=result_class title=count) #{title}
                    //- small #{count}
            // .spacer
        .twelve.wide.column
            .sorting_row
                .ui.icon.input
                    i.search.icon
                    input.tag_search(type='text' placeholder='search...')
                |sort by
                .ui.compact.small.menu
                    .ui.simple.dropdown.item
                        +i name=sort_icon cl='ui avatar image'
                        strong #{sort_label}
                        i.dropdown.icon
                        .menu
                            +set_sort_key key='views' label='views' icon='eye'
                            // +set_sort_key key='datetime_available' label='available' icon='clock'
                            +set_sort_key key='_timestamp' label='added' icon='clock'
                            +set_sort_key key='comment_count' label='comment count' icon='chat'
                +set_sort_direction
                |&nbsp;
                |&nbsp;
                +limit_menu
            .spacer 
            if subs_ready     
                .ui.stackable.three.centered.cards.scrolling
                    each product_docs
                        +product_card
            else 
                .ui.basic.center.aligned.segment
                    i.massive.grey.yin.yang.loading.icon

template(name='product_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    a.ui.big.icon.green.button(href="/product/#{_id}/")
                        i.checkmark.big.icon
                    .ui.inline.header 
                        small editing
                        |'#{title}'
                        small product
                    +array_edit key='tags' icon='tags' direct=true
                    +array_edit key='location_tags' label='location tags' icon='marker' direct=true
                    .ui.icon.basic.small.button.delete_product_item 
                        i.trash.red.icon
                .eight.wide.column
                    +text_edit key='title' icon='header' direct=true
                    +image_edit key='image' direct=true
                    +html_edit key='description' direct=true
                    if is_admin
                        +text_edit key='model' direct=true
                .four.wide.column
                    +number_edit key='inventory' label='inventory' icon='warehouse' direct=true
                    +number_edit key='point_price' icon='coins' label='point price/unit' direct=true
                    .ui.inline.header
                        +i name='delivery'
                        |delivery
                    +boolean_edit key='pickup_delivery' label='pickup' direct=true icon='holding-box'
                    +boolean_edit key='unit_dropoff_delivery' label='unit dropoff' icon='contactless-delivery' direct=true
                    +boolean_edit key='building_dropoff_delivery' label='building dropoff' icon='building' direct=true
                    +textarea_edit key='delivery_instructions' label='delivery instructions' icon='note' direct=true
                

template(name='product_view')
    with current_doc
        .ui.stackable.padded.grid
            //- img.ui.large.rounded.image(src="{{c.url image width=500 height=500 gravity='face' crop='fill'}}")
            .row
                .five.wide.column
                    .ui.header 
                        small viewing
                        |#{title}
                        small product
                    a.ui.big.button.fly_left(href="/products" title='shop')
                        i.left.chevron.icon
                        +i name='shop' cl='ui inline image'
                    if can_edit
                        a.ui.icon.large.basic.circular.button(href="/product/#{_id}/edit")
                            i.pencil.large.blue.icon
                    .ui.large.header #{title}
                    .ui.header added by #{_author_username}
                    |#{when}
                    with author
                        +user_card
                    .ui.hidden.divider
                    +voting_full     
                .seven.wide.column
                    img.ui.centered.rounded.shadowed.image(src="{{c.url image width=1000 height=400 crop='fit'}}")
                    +array_view key='location_tags' label='location tags' icon='marker' direct=true
                    +text_view key='location' icon='marker' label='location description' direct=true
                    +number_view key='point_price' icon='coins' label='point price' direct=true
                    // +number_view key='dollar_price' icon='money' label='dollar price' direct=true
                    +html_view key='description' direct=true
                    +comments
                .four.wide.column
                    div
                    unless sold_out
                        if point_price
                            .ui.big.green.fluid.button.buy_product 
                                i.cart.large.icon
                                |buy for #{point_price}p
                        if dollar_price
                            .ui.big.green.fluid.button.buy_product 
                                i.cart.large.icon
                                |buy for $#{dollar_price}
                    else 
                        .ui.big.disabled.fluid.basic.button
                            |sold out
                    .ui.hidden.divider
                    +array_view key='tags' icon='tags' direct=true
                    div
                    .ui.inline.header
                        +i name='delivery'
                        |delivery
                    div
                    if delivery_instructions
                        .ui.small.inline.header
                            |delivery instructions:
                        |#{delivery_instructions}      
                    +boolean_view key='pickup_delivery' label='pickup' direct=true icon='box'
                    +boolean_view key='unit_dropoff_delivery' label='home dropoff' icon='contactless-delivery' direct=true
                    +boolean_view key='building_dropoff_delivery' label='building dropoff' icon='building' direct=true
                    +product_orders
                    
                    
        
        
