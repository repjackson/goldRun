template(name='user_products')
    .scrolling
        if is_current_user
            .ui.circular.button.add_product
                i.plus.icon
                |product
        each products
            +profile_product_item

template(name='profile_product_item')
    .ui.segment.grid
        .row
            .four.wide.column
                +image_view key='image' direct=true cl='zoom ui tiny image'
            .twelve.wide.column
                .ui.header #{title}
                a.ui.small.header.inline.lowercase(href="/product/#{_id}/")
                    |#{price_per_serving}c / #{serving_unit}
                .ui.small.inline.header #{when}
                a.ui.button(href="/product/#{_id}/")
                    |view
                    i.right.chevron.icon
                if is_admin
                    +remove_button
