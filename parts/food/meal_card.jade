template(name='meal_card')
    .ui.card(class=meal_card_class)
        .image
            img.ui.zoom.pointer.goto_meal.image(src="{{c.url image_id width=400 height=300 crop='pad'}}")
        .content
            a.ui.header(href="/meal/#{_id}/view") 
                //- |#{_author.name}'s
                | #{title}
            //- if session_is 'view_ingredients' true
            +ismall name='ingredients'
            each ingredients
                .ui,small.circular.inverted.label #{this}
        //- .ui.inline.small.header tags
        .content
            .right.floated.meta
                | {{from_now datetime_available}}
            //- if session_is 'view_users' true
            a(href="/user/#{cook.username}")
                img.ui.avatar.image(src="{{c.url cook.image_id width=400 height=600 crop='fit'}}")
                |#{cook.username}
                i.yellow.star.icon
                |3.4
        //- a.image(href="/meal/#{_id}/view")
            
        .content    
            .ui.inline.header
                |#{servings_left}/#{servings_amount}
                small
                    if serving_unit
                        |#{serving_unit}s
                    else 
                        |servings
                    
                    | left
            .ui.inline.right.aligned.header 
                |$#{price_per_serving}
                small
                    |/
                    if serving_unit
                        |#{serving_unit}
                    else 
                        |serving
            div
            if delivery
                +i name='deliver-food' classes='ui avatar image'
                if delivery_fee
                    .ui.inline.header(title='delivery fee') $#{delivery_fee}
            if pickup
                +i name='doormat' classes='ui avatar image'
            if can_edit
                a.ui.large,icon.button(href="/meal/#{_id}/edit")
                    i.pencil.icon
