template(name='group_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    a.ui.fluid.basic.button(href="/groups")
                        i.left.chevron.icon
                        +i name='wrench' cl='ui inline avatar image'
                        |groups
                    .ui.header view group
                    if can_edit
                        a.ui.big.fluid.button(href="/group/#{_id}/edit")
                            i.pencil.icon
                            |edit
                    +image_view key='image_id' label='image' direct=true
                    +voting_full
                    +viewing
                    // if in_dev 
                    +print_this
                .eight.wide.column
                    .ui.header #{title} 
                    +textarea_view key='description' icon='content' label='description' direct=true
                    +array_view key='location_tags' label='location tags' icon='marker' direct=true
