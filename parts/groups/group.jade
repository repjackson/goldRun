template(name='set_group_sort_key')
    .item.set_sort
        if color
            .ui.label(class=color) #{label}
        else 
            if emoji
                em(data-emoji=emoji)
            else if icon
                i.icon(class=icon)
            |#{label}
        

template(name='set_view_mode_group')
    .item.set_view
        i.icon(class=icon)
        |#{title}


template(name='set_group_limit')
    .item.set_limit #{amount}


template(name='group_card')
    .ui.card
        if image_id
            a(href="/group/#{_id}")
                img.ui.image(src="{{c.url image_id}}")
        .content
            a.ui.header(href="/group/#{_id}")
                |#{title}
            |#{member_ids.length} members
            |!{description}
            //- +ismall name='tags' cl='ui inline image'
            each tags
                .ui.basic.label #{this}
            div
            a.zoomer(href="/group/#{_id}")
                i.chevron.right.large.icon
            if is_admin
                .ui.small.header slug: #{slug}
            if can_edit
                a.ui.circular.basic.icon.button(href="/group/#{_id}/edit")
                    i.pencil.blue.icon
                    
                    
