template(name='set_rental_sort_key')
    .item.set_sort
        if color
            .ui.label(class=color) #{label}
        else 
            if emoji
                em(data-emoji=emoji)
            else if icon
                i.icon(class=icon)
            |#{label}
        

template(name='set_view_mode_rental')
    .item.set_view
        i.icon(class=icon)
        |#{title}


template(name='set_rental_limit')
    .item.set_limit #{amount}



template(name='rental_card')
    .ui.card(class=rental_card_class)
        .image
            img.ui.zoom.pointer.goto_rental.image(src="{{c.url image_id width=400 height=300 crop='pad'}}")
        .content
            a.ui.header(href="/rental/#{_id}/view") 
                //- |#{_author.name}'s
                | #{title}
            //- if session_is 'view_ingredients' true
            //- +ismall name='ingredients'
            //- each ingredients
            //-     .ui.small.circular.label #{this}
        //- .ui.inline.small.header tags
        .content
            .right.floated.meta
                | {{from_now datetime_available}}
            //- if session_is 'view_users' true
            a(href="/user/#{cook.username}")
                img.ui.avatar.image(src="{{c.url cook.image_id width=400 height=600 crop='fit'}}")
                |#{cook.username}
        .content    
            if hourly_rental
                .ui.header
                    |#{hourly_rate}c/hr
            if daily_rate
                .ui.header
                    |#{daily_rate}c/day
            if can_edit
                a.ui.large.icon.button(href="/rental/#{_id}/edit")
                    i.pencil.icon
