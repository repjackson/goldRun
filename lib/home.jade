template(name='leaderboard')
    .ui.header 
        +i name='leaderboard'
        |leaderboard
    .ui.animated.selection.link.list.smallscroll
        each top_users
            a.item(href="/user/#{username}")
                img.ui.avatar.image(src="{{c.url image_id width=200 height=200 gravity='face' crop='fill'}}")
                .content
                    strong #{username}
                    small #{points}pts

template(name='latest_users')
    .ui.header
        +i name='clock'
        |latest users
    each latest_user_docs
        .item
            img.ui.avatar.image(src="{{c.url image_id width=200 height=200 gravity='face' crop='fill'}}")
            #{username}
            small #{createdAt}
        
        
template(name='latest_posts')
    .ui.header 
        +i name='blog'
        |latest public posts
    .ui.large.link.selection.animated.list.smallscroll
        each latest_docs
            a.ui.item.fly_right(href="/post/#{_id}")
                img.ui.avatar.image(src="{{c.url image_id width=300 height=300 gravity='face' crop='fill'}}")
                .content
                    .header 
                        |#{title}
                    .description 
                        .ui.label #{model}
                        |#{when}
                        |by #{_author_username}
                        // +author_info


