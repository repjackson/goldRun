template(name='public_chat')          
    a.ui.header.fly_right.zoomer(href="/chat")
        +i name='chat'
        |public chat
    .ui.input
        input.add_public_chat(type='text' placeholder='add message...')
    .ui.list
        each latest_chat_docs
            .item
                |#{body}
                small #{when}
                if currentUser.admin_mode
                    i.remove.link.icon.remove_comment
          
          
template(name='latest_activity')
    .ui.header 
        +i name='clock'
        |latest activity
    .ui.large.link.selection.animated.divided.list.medscroll
        each latest_docs
            +home_doc_item


template(name='home_doc_item')
    a.ui.item.fly_right.zoomer(href="/post/#{_id}")
        if youtube_id
            +youtube_view key='youtube_id'
        else if image_id
            // .image
            img.ui.rounded.inline.image(src="{{c.url image_id gravity='face' crop='fill'}}")
        .content
            .header 
                |#{title}
            .description 
                .smallcut
                    |!{content}
                |#{when}
                if is model 'post'
                    +i name='blog'
                else if is model 'product'
                    +i name='shop'
                else if is model 'event'
                    +i name='calendar'
                else 
                    .ui.label #{model}
                +author_info
                if watson 
                    +doc_emotion

          
