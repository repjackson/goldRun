template(name='public_chat')          
    a.ui.header.fly_right.zoomer(href="/chat")
        +i name='chat'
        |public chat
    .ui.input
        input.add_public_chat(type='text' placeholder='add message...')
    .ui.list
        each latest_chat_docs
            .item
                |#{body}
                small #{when}
                if currentUser.admin_mode
                    i.remove.link.icon.remove_comment
          
          
template(name='healthclub_stats')          
    .ui.header 
        +i name='jacuzzi'
        |hot tub status
    with healthclub_status_doc
        if hottub_open
            .ui.large.green.label 
                |open
        else 
            .ui.red.basic.label 
                |closed
    .ui.header 
        +i name='water'
        |pool status
    with healthclub_status_doc
        if pool_open
            .ui.large.green.label 
                |open
        else 
            .ui.red.basic.label 
                |closed
          
          
template(name='latest_activity')
    .ui.header 
        +i name='clock'
        |latest activity
    .ui.large.link.selection.animated.divided.list.medscroll
        each latest_docs
            a.ui.item.fly_right(href="/post/#{_id}")
                if youtube_id
                    +youtube_view key='youtube_id'
                else if image_id
                    img.ui.small.rounded.image(src="{{c.url image_id width=300 height=300 gravity='face' crop='fill'}}")
                .content
                    .header 
                        |#{title}
                    .description 
                        .smallscroll
                            |!{content}
                        |#{when}
                        if is model 'post'
                            +i name='blog'
                        else if is model 'product'
                            +i name='shop'
                        else if is model 'event'
                            +i name='calendar'
                        else 
                            .ui.label #{model}
                        +author_info

          
