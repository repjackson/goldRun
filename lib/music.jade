template(name='music')
    .ui.stackable.padded.grid 
        .sixteen.wide.column
            .ui.header 
                i.music.icon
                |music
            .ui.header artists
            .ui.input 
                input.artist_search(type='text' placeholder='artist...')
            .ui.cards
                each artist_docs 
                    a.card(href="/music/artist/#{_id}")
                        img.ui.image(src=strArtistThumb)
                        .content
                            .header #{strArtist}
                            .description
                                .ui.label
                                    i.smile.icon
                                    |#{strMood}
