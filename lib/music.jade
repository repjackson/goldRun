                // .item #{strArtistStripped}: strArtistStripped
                if strArtistAlternate
                    .ui.large.basic.inverted.label alternate name: #{strArtistAlternate}
                if strLabel
                    .ui.large.basic.inverted.label label: #{strLabel}
                // .ui.large.basic.inverted.label #{idLabel}: idLabel
                if intFormedYear
                    .ui.large.basic.inverted.label
                        i.clock.icon
                        |formed: 
                        |#{intFormedYear}-
                // if intBornYear
                //     .ui.large.basic.inverted.label born #{intBornYear}
                if intDiedYear
