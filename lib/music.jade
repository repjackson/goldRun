template(name='artist_card')
    a.card.fly_right.zoomer.rounded(href="/music/artist/#{_id}" title='view artist' class=mood_class)
        .ui.fade.reveal.image.rounded
            .visible.content.invert
                img.ui.image(src=strArtistThumb)
            .hidden.content.invert
                img.ui.image(src=strArtistFanart)
        .content
            img.ui.image(src=strArtistLogo title=strArtist)
            .description
                +mood_icon
                if strGenre
                    .ui.inverted.basic.label
                        +i name='music'
                        |#{strGenre}
                if strStyle
                    .ui.inverted.basic.label
                        +i name='artist'
                        |#{strStyle}
                if strMood
                    .ui.inverted.basic.label
                        +i name='happy'
                        |#{strMood}
                each five_tags
                    .ui.inverted.basic.label #{this}
                .ui.inverted.basic.label
                    i.plus.grey.icon
                    | #{_when}
                if points
                    .ui.inverted.basic.label
                        |#{points}pts
                if views
                    .ui.inverted.basic.label
                        i.eye.grey.icon
                        |#{views}
                        
                        
template(name='mood_icon')  
    if mood_icon_class
        span(title="#{strMood} mood")
            +i name=mood_icon_class
                        

template(name='music_artist')
    with current_artist 
        if strArtistBanner
            img.ui.image.profile_banner(src=strArtistBanner)
        .ui.stackable.padded.grid 
            .eight.wide.column.scroling
                a.ui.inverted.big.fluid.button.fly_left(href='/music')
                    i.chevron.left.icon
                    +i name='music'
                    |music
                .ui.two.column.grid 
                    .column
                        img.ui.image.rounded.zoomer(src=strArtistThumb)
                    .column
                        img.ui.image.rounded.zoomer(src=strArtistWideThumb)
                    if strArtistCutout
                        .column
                            img.ui.image.rounded.zoomer(src=strArtistCutout)
                    if strArtistClearart
                        .column
                            img.ui.image.rounded.zoomer(src=strArtistClearart)
                    if strArtistFanart
                        .column
                            img.ui.image.rounded.zoomer(src=strArtistFanart)
                    if strArtistFanart2
                        .column
                            img.ui.image.rounded.zoomer(src=strArtistFanart2)
                    if strArtistFanart3
                        .column
                            img.ui.image.rounded.zoomer(src=strArtistFanart3)
                    if strArtistFanart4
                        .column
                            img.ui.image.rounded.zoomer(src=strArtistFanart4)
                            
                .ui.header views: #{views}
                +voting_full
                div
                +i name='tags'
                each tags 
                    a.ui.inverted.large.basic.link.label.zoomer.pick_flat_tag(title='browse tag') #{this}
                +print_this
            .eight.wide.column.scrolling
                img.ui.image(src=strArtistLogo)
                .ui.massive.inline.header #{strArtist}
                // "strMusicBrainzID": "c8b03190-306c-4120-bb0b-6f2ebfc06ea9",
                // "strISNIcode": null,
