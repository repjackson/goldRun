template(name='music_artist')
    with current_artist 
        .ui.stackable.padded.grid 
            .eight.wide.column
                a.ui.inverted.button(href='/music')
                    i.music.icon
                    |music
                img.ui.image(src=strArtistThumb)
                .ui.header views: #{views}
                +voting
            .eight.wide.column
                .header #{strArtist}
                .ui.header #{strArtistStripped}: strArtistStripped
                .ui.header #{strArtistAlternate}: strArtistAlternate
                .ui.header #{strLabel}: strLabel
                .ui.header #{idLabel}: idLabel
                .ui.header #{intFormedYear}: intFormedYear
                .ui.header #{intBornYear}: intBornYear
                .ui.header #{intDiedYear}: intDiedYear
                .ui.header #{strDisbanded}: strDisbanded
                .ui.header #{strStyle}: strStyle
                .ui.header #{strGenre}: strGenre
                .ui.header #{strMood}: strMood
                .ui.header #{strWebsite}: strWebsite
                .ui.header #{strFacebook}: strFacebook
                .ui.header #{strTwitter}: strTwitter
                |#{strBiographyEN}
                +call_watson key='strBiographyEN'
                if watson 
                    +watson_view
