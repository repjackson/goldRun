template(name='music_artist')
    with current_artist 
        if strArtistBanner
            img.ui.image.profile_banner(src=strArtistBanner)
        .ui.stackable.padded.grid 
            .sixteen.wide.column.scrollin
                a.ui.inverted.fluid.button.fly_left(href='/music')
                    i.chevron.left.icon
                    +i name='music'
                    |music
                img.ui.image(src=strArtistLogo)
                .ui.three.column.stackable.grid 
                    .column
                        img.ui.image.rounded.zoomer(src=strArtistThumb)
                    .column
                        img.ui.image.rounded.zoomer(src=strArtistWideThumb)
                    if strArtistCutout
                        .column
                            img.ui.image.rounded.zoomer(src=strArtistCutout)
                    if strArtistClearart
                        .column
                            img.ui.image.rounded.zoomer(src=strArtistClearart)
                    if strArtistFanart
                        .column
                            img.ui.image.rounded.zoomer(src=strArtistFanart)
                    if strArtistFanart2
                        .column
                            img.ui.image.rounded.zoomer(src=strArtistFanart2)
                    if strArtistFanart3
                        .column
                            img.ui.image.rounded.zoomer(src=strArtistFanart3)
                    if strArtistFanart4
                        .column
                            img.ui.image.rounded.zoomer(src=strArtistFanart4)
                            
                .ui.header views: #{views}
                +voting_full
                div
                +i name='tags'
                each tags 
                    a.ui.inverted.large.basic.link.label.zoomer.pick_flat_tag(title='browse tag') #{this}
                +print_this
            .sixteen.wide.column.scrollin
                .ui.massive.inline.header #{strArtist}
                // "strMusicBrainzID": "c8b03190-306c-4120-bb0b-6f2ebfc06ea9",
                // "strISNIcode": null,
                // "strLastFMChart": "http://www.last.fm/music/The Weeknd/+charts?rangetype=6month",
                if strLastFMChart
                    a.ui.big.inverted.basic.button.zoomer(href=strLastFMChart target='_window' title='last fm')
                        +i name='lastfm'
                        |last fm page
                // if strFacebook
                //     a.ui.big.basic.compact.inverted.button.zoomer(href=strFacebook target='_window' title='view facebook profile')
                //         +i name='facebook'
                // if strTwitter
                //     a.ui.big.basic.compact.inverted.button.zoomer(href=strTwitter target='_window' title='view twitter page')
                //         +i name='twitter'

                // .item #{strArtistStripped}: strArtistStripped
                if strArtistAlternate
                    .ui.large.basic.inverted.label alternate name: #{strArtistAlternate}
                if strLabel
                    .ui.large.basic.inverted.label label: #{strLabel}
                // .ui.large.basic.inverted.label #{idLabel}: idLabel
                if intFormedYear
                    .ui.large.basic.inverted.label
                        i.clock.icon
                        |formed: 
                        |#{intFormedYear}-
                // if intBornYear
                //     .ui.large.basic.inverted.label born #{intBornYear}
                if intDiedYear
                    .ui.large.basic.inverted.label(title='died')
                        +i name='death'
                        | #{intDiedYear}
                if strDisbanded
                    .ui.large.basic.inverted.label disbanded #{strDisbanded}
                if strCountry
                    .ui.large.basic.inverted.label
                        +i name='marker'
                        |#{strCountry}
                .ui.large.basic.inverted.label 
                    +i name='artist'
                    |style: #{strStyle}
                a.ui.large.basic.inverted.label.zoomer.pick_genre
                    +i name='music'
                    |#{strGenre}
                a.ui.large.basic.inverted.label.zoomer.pick_mood
                    +i name='happy'
                    |mood: #{strMood}
                .ui.large.basic.inverted.label
                    a(href=strWebsite target='_window')
                        |#{strWebsite}
                .ui.large.basic.inverted.label
                    // a(href=strWebsite target='_window')
                    |#{strMusicBrainzID}
                .f7 #{strBiographyEN}
                if currentUser.admin_mod
                    +call_watson key='strBiographyEN'
                +comments
                .ui.button.pull_albums
                    |download albums
                .ui.cards
                    each artist_album_docs 
                        a.ui.card.fly_right.zoomer(href="/music/album/#{_id}")
                            img.ui.image(src=strAlbumThumb)
                            .content 
                                .ui.header #{strAlbum}
                                +print_this
                    
            .sixteen.wide.column
                if watson 
                    +watson_view
